{
  "hooks": {
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/tk/Code/go/bin/claudio"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/tk/Code/go/bin/claudio"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --style=capsule --theme=nord"
  },
  "enabledPlugins": {
    "code-review@claude-code-plugins": true,
    "security-guidance@claude-code-plugins": true,
    "superpowers-developing-for-claude-code@superpowers-marketplace": false,
    "superpowers@superpowers-marketplace": true,
    "elements-of-style@superpowers-marketplace": false,
    "explanatory-output-style@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true,
    "hookify@claude-code-plugins": false,
    "typescript-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
